{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/iztiar/iztiar-core/schemas/app-config.schema.json",
    "title": "appConfig",
    "description": "the configuration of the Iztiar application",
    "type": "object",
    "properties" : {
        "core": {
            "type": "object",
            "description": "the core configuration",
            "properties": {
                "logLevel": {
                    "type": "string",
                    "description": "the desired logging level, overridable on the command-line",
                    "default": "INFO"
                },
                "consoleLevel": {
                    "type": "string",
                    "description": "the desired level of the console verbosity, overridable on the command-line",
                    "default": "NORMAL"
                }
            }
        },
        "features": {
            "type": "object",
            "description": "the configuration of the features",
            "patternProperties" : {
                "^[a-zA-Z][a-zA-Z0-9-_]*$": {
                    "type": "object",
                    "description": "the name of the feature",
                    "properties": {
                        "module": {
                            "type": "string",
                            "description": "the name of the module which provides the service, or 'core', mandatory, no default"
                        },
                        "class": {
                            "type": "string",
                            "description": "the name of the class or type or something inside the module, which qualifies the service type, mandatory if module is 'core'"
                        },
                        "enabled": {
                            "type": "boolean",
                            "description": "whether the service is enabled or disabled",
                            "default": true
                        },
                        "add-ons": {
                            "type": "object",
                            "description": "some features to be added to this one",
                            "patternProperties" : {
                                "^[a-zA-Z][a-zA-Z0-9-_]*$": {
                                    "type": "object",
                                    "description": "the name of the feature, unique inside of the 'add-ons' group",
                                    "properties": {
                                        "module": {
                                            "type": "string",
                                            "description": "the name of the module which provides the feature, or 'core', mandatory, no default"
                                        },
                                        "enabled": {
                                            "type": "boolean",
                                            "description": "whether the add-on feature is enabled or disabled",
                                            "default": true
                                        },
                                        "targets": {
                                            "type": "string[]",
                                            "description": "the list of classes to be extended by this add-on"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
