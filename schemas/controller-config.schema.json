{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/iztiar/iztiar-core/schemas/controller-config.schema.json",
    "title": "controllerConfig",
    "description": "the configuration of the coreController",
    "type": "object",
    "patternProperties" : {
        "^[a-zA-Z][a-zA-Z0-9-_]*$": {
            "type": "object",
            "description": "the name of the service",
            "properties": {
                "module": {
                    "type": "string",
                    "description": "'core', mandatory"
                },
                "class": {
                    "type": "string",
                    "description": "'coreController', mandatory"
                },
                "enabled": {
                    "type": "boolean",
                    "description": "whether the service is enabled or disabled",
                    "default": true
                },
                "listenPort": {
                    "type": "integer",
                    "description": "TCP listening port number for internal service management",
                    "default": 24001
                },
                "messaging": {
                    "type": "object",
                    "description": "options for the messaging service, must be at least present to try to connect to this service",
                    "properties": {
                        "feature": {
                            "type": "string",
                            "description": "the name of the messaging feature to which the coreController may connect (the preferred configuration)"
                        },
                        "host": {
                            "type": "string",
                            "description": "the hostname to use to connect to the message bus (only localhost being managed for now)"
                        },
                        "port": {
                            "type": "integer",
                            "description": "the port number to use to connect to the message bus"
                        },
                        "alivePeriod": {
                            "type": "integer",
                            "description": "interval (ms) between two alive publications, defaulting to 1mn",
                            "default": 60000
                        }
                    }
                },
                "add-ons": {
                    
                }
            }
        }
    }
}
